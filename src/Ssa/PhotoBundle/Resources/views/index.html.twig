<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
    <head>
        <title>Stéphane et Julie SAUTRON</title>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
        
        <meta name="Stéphane, Julie, Sautron" content="Stéphane, Julie, Sautron"/>
        {% block stylesheets %}
                <link href="{{ asset('bundles/ssaphoto/css/style.css') }}" type="text/css" rel="stylesheet" />
        {% endblock %}
        
    </head>
    <style>
        span.reference{
            position:fixed;
            left:10px;
            bottom:0px;
            font-size:9px;
        }
        span.reference a{
            color:#aaa;
            text-decoration:none;
        }
        span.reference a:hover{
            color:#ddd;
            
        }

    </style>
    <body>
        <div class="albumbar">
            <span>
                
                    Stéphane et Julie SAUTRON
                
            </span>
            <div id="albumSelect" class="albumSelect">
                <ul>
                {% for item in dossier %}
            		<li><a>{{ item }}</a></li>
        		{% endfor %}
   
                </ul>
                <div class="title down">{{ dossier[0] }}</div>
            </div>
        </div>
        <div id="loading"></div>
        <div id="preview">
            <div id="imageWrapper">               
            </div>  
        </div>
        <div id="thumbsWrapper">
        </div>
        <div class="infobar">
            <span id="description"></span>
            <span class="reference">
                &copy;Stéphane 2014
            </span>
        </div>
        
        <input type="hidden" id="id_service" value="{{ url('ssa_photo_list', {dossier:'null'}) }}">
        {% block javascripts %}
        
            
            <!-- The JavaScript -->
            <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
            <script src="{{ asset('bundles/ssaphoto/js/jquery.gallery.js') }}" type="text/javascript"></script>        
        

	

        {% endblock %}

    </body>
</html>